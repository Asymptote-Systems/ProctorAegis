# ====== Postgres Credentials (used by both DB & Backend) ======
POSTGRES_DB=app_db
POSTGRES_USER=app_user
# Use a strong password. Change this before production.
POSTGRES_PASSWORD=STRONG_CHANGE_ME_32CHARS_MIN

POSTGRES_HOST=db
POSTGRES_PORT=5432

# SQLAlchemy URL consumed by the backend
DATABASE_URL=postgresql+psycopg2://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Adminer convenience
ADMINER_DEFAULT_SERVER=db

# ====== Backend Settings ======
# Comma-separated origins for CORS (leave empty to disable CORS)
CORS_ORIGINS=
APP_ENV=production
